= form_for todo do |f|
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.hidden_field :text, id: "todo_text[#{todo.id}]"
    %trix-editor{input: "todo_text[#{todo.id}]"}
  .action
    = f.submit "更新する"
  .action
    = link_to "削除する", todo_path(todo), method: :delete
